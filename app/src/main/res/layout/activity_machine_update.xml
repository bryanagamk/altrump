<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".information.machine.MachineUpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID mesin"
            android:textSize="12sp"
            android:textColor="@color/colorSubTitle"
            android:fontFamily="@font/montserrat_regular"/>

        <EditText
            android:id="@+id/et_idMesin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="00:00:00:00:00:00"
            android:inputType="textShortMessage"
            android:textColor="@color/colorTitle"
            android:textSize="26sp"
            android:fontFamily="@font/montserrat_regular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorSeparator"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi tambahan"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/xd_gasstation_24dp"/>

            <EditText
                android:id="@+id/et_namaMesin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:background="@android:color/transparent"
                android:hint="Nama mesin"
                android:inputType="textShortMessage"
                android:textColor="@color/colorTitle"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Harga pengisian mobil"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/xd_money_24dp"/>

            <EditText
                android:id="@+id/et_mobilNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:background="@android:color/transparent"
                android:hint="Pengisian baru"
                android:inputType="number"
                android:textColor="@color/colorTitle"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/xd_money_24dp"/>

            <EditText
                android:id="@+id/et_mobilRefill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:background="@android:color/transparent"
                android:hint="Pengisian ulang"
                android:inputType="number"
                android:textColor="@color/colorTitle"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Harga pengisian motor"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/xd_money_24dp"/>

            <EditText
                android:id="@+id/et_motorNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:background="@android:color/transparent"
                android:hint="Pengisian baru"
                android:inputType="number"
                android:textColor="@color/colorTitle"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/xd_money_24dp"/>

            <EditText
                android:id="@+id/et_motorRefill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:background="@android:color/transparent"
                android:hint="Pengisian ulang"
                android:inputType="number"
                android:textColor="@color/colorTitle"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>