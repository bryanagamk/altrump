<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <ImageView
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/xd_gasstation_24dp"/>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7">

        <TextView
            android:layout_margin="5dp"
            android:text="SPBU Gresik"
            android:fontFamily="@font/montserrat_medium"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/tv_namaSPBU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:text="Jam Hidup"
                android:fontFamily="@font/montserrat_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="5dp"
                android:text="8:00:00"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/montserrat_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_jamHidup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="14dp"
                android:layout_margin="5dp"
                android:text="Jam Mati"
                android:fontFamily="@font/montserrat_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_margin="5dp"
                android:text="22:00:00"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/montserrat_light"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:id="@+id/tv_jamMati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_online_24dp" />

        <TextView
            android:gravity="center"
            android:text="Hidup"
            android:fontFamily="@font/montserrat_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</LinearLayout>