<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".dashboard.DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_car_1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="26 Oktober 2016"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="24dp"/>
        <!--TODO: tampilkan date hari ini-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/tv_date"
            android:layout_marginLeft="24dp">

            <TextView
                android:id="@+id/countTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="210"
                android:textSize="32sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"/>

            <!--TODO: 210 ini jumlah apa?-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="transaksi"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorSubTitle"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimasi\nPemasukan"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"/>

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Rp 30.000.000"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"/>
            <!--TODO: tampilkan jumlah pemasukan-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bulan"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorIcon"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah\nTransaksi"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"/>

            <TextView
                android:id="@+id/tv_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="17.000"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"/>
            <!--TODO: Tampilkan jumlah transaksi-->

            <TextView
                android:id="@+id/tv_monthDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oktober 2016"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"/>

            <!--TODO: Tampilkan Bulan real time-->

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi mesin"
        android:textColor="@color/colorBlue"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"/>
    <!--TODO: Informasi mesin ListView Mesin di seluruh SPBU-->

</LinearLayout>